@page
@model GameProjects.Pages.Contributions.EditModel

@{
    ViewData["Title"] = "Edit Contribution";
}

<h1>Edit Contribution</h1>

<h4>Contribution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Contribution.Id" />
            <div class="form-group">
                
                <label asp-for="Contribution.GameId" class="control-label"></label>
                <select asp-for="Contribution.GameId" class="form-control" asp-items="ViewBag.GameId"></select>
                <span asp-validation-for="Contribution.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Contribution.DeveloperId" class="control-label"></label>
                <select asp-for="Contribution.DeveloperId" class="form-control" asp-items="ViewBag.DeveloperId"></select>
                <span asp-validation-for="Contribution.DeveloperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Contribution.Role" class="control-label"></label>
                <input asp-for="Contribution.Role" class="form-control" />
                <span asp-validation-for="Contribution.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Contribution.ContributionType" class="control-label"></label>
                <input asp-for="Contribution.ContributionType" class="form-control" />
                <span asp-validation-for="Contribution.ContributionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Contribution.ContributionDescription" class="control-label"></label>
                <input asp-for="Contribution.ContributionDescription" class="form-control" />
                <span asp-validation-for="Contribution.ContributionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Contribution.ContributionDate" class="control-label"></label>
                <input asp-for="Contribution.ContributionDate" class="form-control" />
                <span asp-validation-for="Contribution.ContributionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
